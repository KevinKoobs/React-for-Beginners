/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
	transform translateX(-120%)
	transition 250ms
	max-height 0
	padding 0 !important
	&.order-enter-active
		max-height 64px
		padding 2rem 0 !important
		transform translateX(0)

.order-exit
	transform translateX(0)
	transition 250ms
	&.order-exit-active
		transform translateX(120%)
		padding 0
